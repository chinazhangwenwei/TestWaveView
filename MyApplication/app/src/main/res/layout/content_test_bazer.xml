<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_test_bazer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.weiwei.myapplication.activity.TestBazerActivity"
    tools:showIn="@layout/activity_test_bazer">

    <com.weiwei.myapplication.view.widget.CircleBerzierView
        android:id="@+id/bazer_view"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <com.weiwei.myapplication.view.widget.CircleBerzierView
        android:id="@+id/bazer_view2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/bazer_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <SeekBar
        android:id="@+id/seek1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bazer_view2"
        android:layout_marginTop="20dp"
        android:max="100"
        android:progress="2" />

    <SeekBar
        android:id="@+id/seek2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seek1"
        android:layout_marginTop="5dp"
        android:max="100"
        android:progress="2" />

    <SeekBar
        android:id="@+id/seek3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seek2"
        android:layout_marginTop="5dp"
        android:max="100"
        android:progress="2" />

    <SeekBar
        android:id="@+id/seek4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seek3"
        android:layout_marginTop="5dp"
        android:max="100"
        android:progress="2" />


</RelativeLayout>
